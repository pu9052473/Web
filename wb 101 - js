       // create object by construction function
    function User(name,age,address){
       this.name=name;                            // define a function of object
       this.age=age;
       this.address=address;
    };

    let u1= new User('uday',19,'vithon');        // use object by declare new variable
    console.log(u1);

// add properties after assign the object
    let user={
     name:"uday",
     age:19
    };    
     console.log(user);
    user.address="vithon"         // add property using (.)
    console.log(user);
    user["email"]="uday@gmail.com"  //   add property using []
    console.log(user);
    user.age=20;                   //update the value
    console.log(user);
    delete user.age;               //delete the value
    console.log(user);
    console.log(user.name);       //access any key using(.)
    user ["date-of-birth"]="18-02-2005";
    console.log(user["date-of-birth"]);  // access by [],any name have space,(-),(/) are only access by using []
    const uservalues = Object.values(user);
    console.log(uservalues);                   // access by adding on onther variable
    const userkeys = Object.keys(user);
    console.log(userkeys);                   //return name of all keys of object
    const newObg = {
       ...user,
       location:"visnagar"                //  merging object into onther object
    }
    console.log(newObg);
    console.log(Object.freeze(user))      //freeze the original object than after any change will not succid in object
    user.height = "5.4";
    console.log(user);                    //this change  will not happen after the freeze
   console.log(Object.isFrozen(user));    //said that object is frozen or not
   console.log(Object.seal(user));          //it seals the properties than changes will happen but the add will not happen
   user.address="visnagar";                   // change will happen
   console.log(user);
   console.log(Object.isSealed(user));         // talls that sealed is succed or not
   user.school = "upasana vidhyalaya"          // but add will not happen
   console.log(user);

// add element in ul with foreach array
        let language=[ "javascript","pythen","c++","swift","tellwincss"];
        let result=[];

        let createList = value =>{                       
         let element = "<li>" + value + "</li>";          // function that add elemnt into list tag
         result.push(  element );                            // that element will insert in result array
        } 

        language.forEach(createList);               // function call

        document.getElementById("language").innerHTML = result.join("\n");      //  element will insert ny new line into tag have language id

