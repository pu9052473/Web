
<table>
    <tbody>
        <% for(var i=0; i < allTodo.length; i++) { %>
            <tr>
                <td class="Todo-Item">
                    <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50 ml-5">
  
                        <input id="checkbox<%= allTodo[i].id %>" type="checkbox" <%= allTodo[i].completed ? "checked" : "" %>
                        onclick="updateTodo(<%= allTodo[i].id %>) " class="mr-2 w-4 h-4 dark:border-white-400/20
                            dark:scale-100 transition-all duration-500
                            ease-in-out dark:hover:scale-110 dark:checked:scale-100 w-10 h-10"/>
                            <label for="checkbox<%= allTodo[i].id %>" class="ml-2 text-sm cursor-pointer text-gray-900">
                                <%= allTodo[i].title %>
                                    <%= allTodo[i].dueDate %>
                            </label>
                            <a href="#" class="ml-4 hidden trash-icon"  onclick="deleteTodo(<%= allTodo[i].id %>)">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                  </svg>                                                                    
                            </a>
                    </div>
                </td>
            </tr>
            <% } %>
    </tbody>
  </table>